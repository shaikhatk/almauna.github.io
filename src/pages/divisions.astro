---
import Layout from '~/layouts/PageLayout.astro';
import Image from 'astro/components/Image.astro';

const title = `Divisions`;

const featuresData = [
  {
    img: '/src/assets/images/division-1.png',
    title: 'Integrated supply network',
    desc: 'Seamless coordination from sourcing to final delivery.',
  },
  {
    img: '/src/assets/images/division-2.png',
    title: 'Trusted regional expertise',
    desc: 'Strong presence across Qatar and the UAE with local insight.',
  },
  {
    img: '/src/assets/images/division-3.png',
    title: 'Flexible, scalable solutions',
    desc: 'From retail-ready packs to bulk wholesale supply.',
  },
  {
    img: '/src/assets/images/division-4.png',
    title: 'Quality you can rely on',
    desc: 'Flexible, dedicated support for every client.',
  },
];
---

<Layout metadata={{ title }}>
  <main>
    <section
      style="background-image:linear-gradient(180deg, #75317A 0%, rgba(130, 46, 124, 0.784801) 52.96%, rgba(179, 36, 130, 0) 100%), url(/src/assets/images/Photography/import-build.jpg);  background-size: cover; background-position: center; height: 768px"
      class="md:!h-[476px]"
    >
      <div class="flex flex-col items-center pt-[99px] max-w-5xl mx-auto px-6">
        <h1 class="text-[32px] font-bold text-white text-center">A unified approach to growth</h1>
        <p class="text-[20px] pt-2 text-[#F6E9F2] text-center">
          At Al Mauna Trading, we have a diversified business model with specialized divisions working seamlessly to
          serve consumers, retailers, wholesalers, and institutions across Qatar and the UAE. Our promise goes beyond
          supplying products: we deliver value, consistency, and trust in every transaction.
        </p>
      </div>
    </section>
    <section class="py-[96px]">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-[32px] font-bold text-gradient text-center">Our integrated business divisions</h2>
        <p class="text-[20px] pt-2 text-center">How we deliver value across every channel</p>
      </div>
    </section>

    <section id="import" class="md:py-[96px] py-[64px] bg-gradient-secondary">
      <div class="md:grid md:grid-cols-3 flex flex-col gap-[64px] md:gap-[140px] items-center max-w-6xl mx-auto px-6">
        <div class="col-span-1">
          <Image
            src="/src/assets/images/import.svg"
            height={111}
            width={96}
            class="md:w-auto md:h-[300px] w-auto h-[191px] object-center object-cover"
            alt="import"
          />
        </div>
        <div class="col-span-2">
          <h2 class="text-[32px] font-bold text-gradient">Import & Distribution</h2>
          <p class="text-[20px] pt-[16px]">
            This division is the foundation of Al Mauna Trading. From sourcing trusted international brands to ensuring
            full regulatory compliance, we handle every step of the import process with precision and transparency.
            <br /><br />
            Key capabilities:
          </p>
          <br />
          <ul class="pl-[50px] list-disc text-[20px]">
            <li>Licensed import operations in Qatar and the UAE</li>
            <li>Strategic warehousing in Doha and Dubai</li>
            <li>Efficient customs clearance and documentation handling</li>
            <li>Temperature-controlled storage and transport</li>
            <li>ISO 22000–certified operations (Dubai branch) ensuring food safety and quality</li>
          </ul>
        </div>
      </div>
    </section>

    <section id="wholesale" class="md:py-[96px] py-[64px]">
      <div class="md:grid md:grid-cols-3 flex flex-col gap-[64px] md:gap-[140px] items-center max-w-6xl mx-auto px-6">
        <div class="col-span-1">
          <Image
            src="/src/assets/images/wholesale.svg"
            height={111}
            width={96}
            class="md:w-auto md:h-[300px] w-auto h-[191px] object-center object-cover"
            alt="import"
          />
        </div>
        <div class="col-span-2">
          <h2 class="text-[32px] font-bold text-gradient">Wholesale Solutions</h2>
          <p class="text-[20px] pt-[16px]">
            This division supports businesses that require bulk quantities and tailored procurement solutions. We
            prioritize flexibility, reliability, and long-term partnerships, ensuring our clients enjoy both competitive
            pricing and uninterrupted supply.
            <br /><br />

            Key benefits for our clients:
          </p>
          <br />
          <ul class="pl-[50px] list-disc text-[20px]">
            <li>Competitive bulk pricing for cost efficiency</li>
            <li>Customized ordering, delivery, and packaging options</li>
            <li>Real-time order tracking and inventory support</li>
            <li>Simplified billing and regulatory compliance</li>
            <li>Access to exclusive products and periodic promotions</li>
            <li>Flexible payment and credit terms</li>
          </ul>
        </div>
      </div>
    </section>

    <section id="retail" class="md:py-[96px] py-[64px] bg-gradient-secondary">
      <div class="md:grid md:grid-cols-3 flex flex-col gap-[64px] md:gap-[140px] items-center max-w-6xl mx-auto px-6">
        <div class="col-span-1">
          <Image
            src="/src/assets/images/retail.svg"
            height={111}
            width={96}
            class="md:w-auto md:h-[300px] w-auto h-[191px] object-center object-cover"
            alt="import"
          />
        </div>
        <div class="col-span-2">
          <h2 class="text-[32px] font-bold text-gradient">Retail Distribution</h2>
          <p class="text-[20px] pt-[16px]">
            This division network bridges our extensive product portfolio with supermarkets, specialty stores, and
            wellness retailers. Through optimized logistics and marketing collaboration, we help retail partners
            maintain consistent availability and consumer appeal.
            <br /><br />
            What we offer retail partners:
          </p>
          <br />
          <ul class="pl-[50px] list-disc text-[20px]">
            <li>Reliable replenishment and shelf management support</li>
            <li>Flexible delivery schedules aligned with retail cycles</li>
            <li>In-store marketing and promotional assistance</li>
            <li>Product knowledge and staff training sessions</li>
            <li>Strict adherence to quality and compliance standards</li>
            <li>Advanced tracking for transparency and efficiency</li>
          </ul>
        </div>
      </div>
    </section>

    <section
      class="py-[96px]"
      style={{
        backgroundImage: 'url(/src/assets/images/violet-bg.svg)',
        backgroundRepeat: 'no-repeat',
        backgroundSize: 'cover',
        backgroundPosition: 'center',
      }}
    >
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-col items-center">
          <h1 class="text-[32px] font-bold text-gradient-secondary">What sets us apart</h1>
          <p class="text-[20px] md:pt-2 pt-[16px] text-[#F6E9F2] text-center">
            Our success is powered by an integrated network, certified quality, and<br class="md:block hidden" /> lasting
            partnerships that keep businesses moving forward.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-[64px] md:gap-[32px] mt-[64px]">
          {
            featuresData.map((item, index) => (
              <div key={index}>
                <div class="flex relative items-center justify-center">
                  <div class="bg-gradient-tertiary rotate-[45deg] h-[80px] w-[80px] rounded-[8px]" />
                  <Image
                    src={item.img}
                    height={111}
                    width={96}
                    class="w-[110px] h-[111px] absolute object-center object-cover"
                    alt={item.title}
                  />
                </div>

                <h1 class="text-[16px] font-bold text-gradient-secondary text-center pt-[46px]">{item.title}</h1>

                <p class="text-[14px] text-[#F6E9F2] text-center pt-1">{item.desc}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="pt-[96px] pb-[170px] bg-gradient-secondary">
      <div class="max-w-6xl mx-auto px-6">
        <h1 class="text-[32px] font-bold text-gradient text-center">Join us in growth</h1>
        <p class="text-[20px] text-center pt-[8px]">
          Your success is our business — let’s grow together with purpose and reliability.
        </p>
        <div class="flex justify-center items-center pt-[48px]">
          <a
            href="/get-a-quote"
            class="bg-gradient-primary py-[16px] px-[32px] shadow-primary rounded-[32px] text-white font-bold text-[16px]"
            >Get a Quote</a
          >
        </div>
      </div>
    </section>
  </main>
</Layout>
