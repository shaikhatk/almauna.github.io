---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <main>
    <section class="bg-gradient-secondary pt-[96px] pb-[170px]">
      <div class="max-w-5xl mx-auto px-6">
        <h2 class="text-center text-[32px] text-gradient font-bold">Get a quote</h2>
        <p class="text-center text-[20px] pt-2">Fill in the form to receive a custom quote from our experts.</p>

        <form class="max-w-md mx-auto pt-[40px] space-y-2">
          <input
            type="text"
            placeholder="Full name"
            class="w-full px-4 py-3 focus:outline-none border border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <input
            type="text"
            placeholder="Company name"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <input
            type="email"
            placeholder="E-mail"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <input
            type="text"
            placeholder="Phone number / WhatsApp"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <input
            type="text"
            placeholder="Country"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <select
            class="w-full px-2 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] text-black text-opacity-50"
          >
            <option>Monthly Requirement</option>
            <option>Weekly Requirement</option>
            <option>Daily Requirement</option>
          </select>

          <input
            type="text"
            placeholder="Delivery Location"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          />

          <select
            class="w-full px-2 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] text-black text-opacity-50"
          >
            <option>Container</option>
            <option>20 FT</option>
            <option>40 FT</option>
          </select>

          <textarea
            placeholder="Message"
            rows="5"
            class="w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50"
          ></textarea>

          <div class="flex justify-center pt-[32px]">
            <button
              type="submit"
              class="px-8 py-3 rounded-[32px] focus:outline-none text-white font-bold text-[16px] bg-gradient-primary shadow-md hover:opacity-90"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </section>
  </main>
</Layout>
