---
const footerSections = [
  {
    title: 'AL MAUNA',
    links: [
      { label: 'Home', href: '/' },
      { label: 'About Us', href: '/about' },
      { label: 'Dubai Branch', href: '/dubai-branch' },
      { label: 'Contact Us', href: '/contact' },
      { label: 'Careers', href: '/' },
    ],
  },
  {
    title: 'DIVISIONS',
    links: [
      { label: 'Import and Distribution', href: '/divisions#import' },
      { label: 'Wholesale Solutions', href: '/divisions#wholesale' },
      { label: 'Retail Distributions', href: '/divisions#retail' },
      { label: 'Online Store', href: 'https://store.almauna.com/' },
    ],
  },
  {
    title: 'OUR BRANDS',
    links: [
      { label: 'Maharani', href: '/brands?brand=maharani' },
      { label: 'Honig Ozbal', href: '/brands?brand=honig-ozbal' },
      { label: 'Vitabella', href: '/brands?brand=nicoli-vitabella' },
      { label: 'Tradekey', href: '/brands?brand=tradekey' },
      { label: 'April', href: '/brands?brand=april' },
      { label: 'Shraddha', href: '/brands?brand=shraddha' },
      { label: 'Al mauna', href: '/brands?brand=al-mauna' },
    ],
  },
  {
    title: 'QATAR OFFICE',
    details: {
      address: 'C Ring Road, Doha',
      phones: ['+974 4441 6966', '+974 3356 0938'],
      email: 'sales@almauna.com',
    },
  },
  {
    title: 'UAE OFFICE',
    details: {
      address: 'Business Bay, Dubai',
      phones: ['+971 5047 89777', '+971 4258 8070'],
      email: 'sales.uae@almauna.com',
    },
  },
];
---

<footer class="bg-gradient-primary text-[14px] pt-[133px] pb-[25px] px-6 md:px-[44px]">
  <div
    style={{
      backgroundImage: 'url(/src/assets/images/violet-bg.svg)',
      backgroundRepeat: 'no-repeat',
      backgroundSize: 'cover',
      backgroundPosition: 'center',
      borderRadius: '8px',
    }}
    class="z-10 mt-[-200px] mb-[58px] max-w-6xl mx-auto relative p-[32px] md:py-[49.5px] md:px-[48px] grid grid-cols-1 md:grid-cols-2"
  >
    <div>
      <h2 class="text-[24px] font-bold text-white">Subscribe to our newsletter</h2>
      <p class="text-[16px] text-white pt-2">Stay informed with our latest news and exclusive offers</p>
    </div>
    <div class="flex md:flex-row flex-col gap-[26px] md:gap-[32px]">
      <input
        type="email"
        placeholder="Type your best email address"
        style={{
          backgroundColor: 'rgba(255, 255, 255, 0.05)',
          color: 'rgba(255, 255, 255, 1)',
        }}
        class="text-[14px] py-[15.5px] px-[16px] rounded-[8px] mt-[32px] md:mt-0 border border-pink-600 border-opacity-20 w-full focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-30 placeholder:text-white placeholder:opacity-50"
      />
      <div class="flex justify-center">
        <button class="bg-white text-[#712F76] w-[145px] text-[16px] font-bold px-[32px] py-[14.5px] rounded-[32px]"
          >Subscribe</button
        >
      </div>
    </div>
  </div>
  <div class="mx-auto">
    <div class="md:hidden flex justify-between items-start">
      <img
        src="/src/assets/images/footer-logo.webp"
        alt="Al Mauna Logo"
        class="w-[141px] h-[91px] object-cover object-center"
      />
      <div class="flex items-start">
        <a href="#" aria-label="Facebook">
          <img
            src="/src/assets/images/facebook.svg"
            alt="Facebook"
            class="w-[44px] h-[44px] object-cover object-center"
          />
        </a>
        <a href="#" aria-label="Instagram">
          <img
            src="/src/assets/images/insta.svg"
            alt="Instagram"
            class="w-[44px] h-[44px] object-cover object-center"
          />
        </a>
      </div>
    </div>
  </div>
  <div class="mx-auto mt-[32px] md:mt-0 grid grid-cols-2 gap-[32px] md:gap-0 md:grid-cols-6">
    <!-- Logo + Social -->
    <div class="md:block hidden">
      <img
        src="/src/assets/images/footer-logo.webp"
        alt="Al Mauna Logo"
        class="w-[141px] h-[91px] object-cover object-center"
      />
      <div class="flex mt-[32px] justify-start">
        <a href="#" aria-label="Facebook">
          <img
            src="/src/assets/images/facebook.svg"
            alt="Facebook"
            class="w-[44px] h-[44px] object-cover object-center"
          />
        </a>
        <a href="#" aria-label="Instagram">
          <img
            src="/src/assets/images/insta.svg"
            alt="Instagram"
            class="w-[44px] h-[44px] object-cover object-center"
          />
        </a>
      </div>
    </div>

    <!-- Dynamic Footer Columns -->
    {
      footerSections.map((section) => (
        <div>
          <h3 class="font-bold text-[#FFFFFF] text-[16px] text-opacity-[50%] mb-4">{section.title}</h3>

          {section.links ? (
            <ul class="space-y-2 text-[16px] text-[#FFFFFF]">
              {section.links.map((link) => (
                <li>
                  <a href={link.href} class="hover:underline">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            <div class="text-[16px] space-y-1 text-[#FFFFFF]">
              <p>{section.details.address}</p>
              {section.details.phones.map((phone) => (
                <p>{phone}</p>
              ))}
              <a href={`mailto:${section.details.email}`} class="hover:underline block">
                {section.details.email}
              </a>
            </div>
          )}
        </div>
      ))
    }
  </div>

  <!-- Copyright -->
  <div class="mt-[25px] text-center text-[12px] text-[#C695BE]">Copyright Â© 2025 Al Mauna. All rights reserved.</div>
</footer>
